                    <key>system.cpu.usage</key>
                    <history>7d</history>
                    <trends>365d</trends>
                    <value_type>UNSIGNED</value_type>
                    <units>%</units>
                    <description>Current CPU usage percentage</description>
                </item>
                <item>
